<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Eva2do.P1"
             Title="Carrito">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#ff9838" Padding="24" CornerRadius="0">
                <Label Text="Carrito"></Label>
            </Frame>
            <Label Text="Tiene los siguientes productos en su carrito: " FontSize="24"></Label>
            <Label Text="Ingrese su método de pago: "></Label>
            <RadioButton Content="Tarjeta de credito / debito"></RadioButton>
            <RadioButton Content="Paypal"></RadioButton>
            <RadioButton Content="Oxxo"></RadioButton>
            <Label Text="En Tiene los siguientes productos en su carrito: "></Label>
        </StackLayout>
                
    </ContentPage.Content>
</ContentPage>